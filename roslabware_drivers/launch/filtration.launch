<launch>
	<arg
		name="f_device_name"
		default="filtration_system"/>
	<arg
		name="f_connection_mode"
		default="serial"/>
	<arg
		name="f_address"
		default="None"/>
	<arg
		name="f_port"
		default="COM6"/>
	<arg
		name="f_simulation"
		default="False"/>
	<node
		name="filtration_system"
		pkg="roslabware_drivers"
		type="filtration_system"
		args="
			-fd $(arg f_device_name)
			-fc $(arg f_connection_mode)
			-fadd $(arg f_address)
			-fp $(arg f_port)
			-fl $(arg f_simulation)"
		output="screen"/>
</launch>
