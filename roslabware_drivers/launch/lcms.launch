<launch>
	<arg
		name="l_device_name"
		default="lcms"/>
	<arg
		name="l_connection_mode"
		default="tcpip"/>
	<arg
		name="l_address"
		default="172.31.1.18"/>
	<arg
		name="l_port"
		default="8000"/>
	<arg
		name="l_experiment_name"
		default="test"/>
	<arg
		name="l_simulation"
		default="False"/>
	<node
		name="lcms"
		pkg="roslabware_drivers"
		type="lcms"
		args="
			-ld $(arg l_device_name)
			-lc $(arg l_connection_mode)
			-ladd $(arg l_address)
			-lp $(arg l_port)
			-ll $(arg l_simulation)
			-lx $(arg l_experiment_name)"
		output="screen"/>
</launch>
