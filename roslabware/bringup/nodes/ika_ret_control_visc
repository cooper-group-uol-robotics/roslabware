"""
Node to use the IKA RCT Digital plate Top Pan balance in ROS
"""

# External
import sys
import rospy
from ...devices.ika_ret_control_visc import RETControlViscHotplateRos

# Object oriented initialization for ROS
if __name__ == "__main__":
    if len(sys.argv) > 1:
        serial_port = sys.argv[1]
    else:
        serial_port = '/dev/ttyACM0'
        rospy.logwarn('No port provided. Using ttyUSB0 as default port')

    # Initialize rospy node
    rospy.init_node("RETControlViscHotplate Driver", anonymous=True)

    # Create instance
    IKA_ROS = RETControlViscHotplateRos(
        device_name=None,
        connection_mode='serial',
        address=None,
        port=serial_port)

    # Stop everything on shutdown
    rospy.on_shutdown(IKA_ROS.stop_temperature_regulation())
    rospy.on_shutdown(IKA_ROS.stop_stirring())
    rospy.spin()
